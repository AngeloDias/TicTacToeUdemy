<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whitebackground"
        android:orientation="vertical"
        tools:context="br.com.training.android.tictactoeapp.MainActivity">

    <LinearLayout
            android:layout_margin="10pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/editTextEmailPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="@string/other_player_email_txt"/>

        <Button
                android:id="@+id/btnRequest"
                android:background="@color/blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/request_txt"
                android:layout_marginLeft="3pt"
                android:layout_marginStart="3pt"
                android:onClick="btnRequestEvent"/>

        <Button
                android:id="@+id/btnAccept"
                android:background="@color/darkGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/accept_txt"
                android:layout_marginLeft="3pt"
                android:layout_marginStart="3pt"
                android:onClick="btnAcceptEvent"/>
    </LinearLayout>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whitebackground"
            android:gravity="center">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3pt"
                android:gravity="center">

            <Button
                    android:id="@+id/bu1"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginLeft="3pt"
                    android:background="@color/whileBu"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/bu2"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginLeft="3pt"
                    android:background="@color/whileBu"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/bu3"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginLeft="3pt"
                    android:background="@color/whileBu"
                    android:onClick="buClick" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3pt"
                android:gravity="center">

            <Button
                    android:id="@+id/bu4"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginLeft="3pt"
                    android:background="@color/whileBu"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/bu5"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginLeft="3pt"
                    android:background="@color/whileBu"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/bu6"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginLeft="3pt"
                    android:background="@color/whileBu"
                    android:onClick="buClick" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3pt"
                android:gravity="center">

            <Button
                    android:id="@+id/bu7"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginLeft="3pt"
                    android:background="@color/whileBu"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/bu8"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginLeft="3pt"
                    android:background="@color/whileBu"
                    android:onClick="buClick" />

            <Button
                    android:id="@+id/bu9"
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginStart="3pt"
                    android:layout_marginLeft="3pt"
                    android:background="@color/whileBu"
                    android:onClick="buClick" />
        </TableRow>
    </TableLayout>

</LinearLayout>